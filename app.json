{
  "expo": {
    "name": "yo-app",
    "slug": "yo-app",
    "version": "1.0.1",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "scheme": "yo-app",
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#000000"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.bahnfor.yoapp",
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false,
        "NSSpeechRecognitionUsageDescription": "This app uses speech recognition to enable voice commands and voice-based interactions with your personal assistant.",
        "NSMicrophoneUsageDescription": "This app needs access to your microphone to process voice commands and enable voice interactions."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.getyo.app",
      "permissions": [
        "RECORD_AUDIO",
        "CAMERA",
        "READ_CALENDAR",
        "WRITE_CALENDAR",
        "INTERNET",
        "ACCESS_NETWORK_STATE"
      ],
      "versionCode": 2
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-localization",
      "expo-web-browser"
    ],
    "extra": {
      "eas": {
        "projectId": "58379bef-7686-4317-8dbd-c11abaa63467"
      }
    }
  }
}
